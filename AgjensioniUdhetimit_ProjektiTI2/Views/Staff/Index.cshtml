            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.ActionLink(@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Edit, "Edit", new { id = item.StaffID }, new { @class = "btn btn-light" })
                @Html.ActionLink(@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Delete, "Delete", new { id = item.StaffID }, new { @class = "btn btn-light" })
