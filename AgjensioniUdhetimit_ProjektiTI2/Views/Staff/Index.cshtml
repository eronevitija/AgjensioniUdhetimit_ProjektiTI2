<p style="margin-top:3%">
    @Html.ActionLink(AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Add_new_Staff, "Create", null, new { @class = "nav-link text-dark"})
</p>
<table class="table " id="clientTable" style="margin-top:2%">
    <thead class="thead-light">
        <tr>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.FirstName</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.LastName</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Gender</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Address</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Email</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.PhoneNumber</th>
