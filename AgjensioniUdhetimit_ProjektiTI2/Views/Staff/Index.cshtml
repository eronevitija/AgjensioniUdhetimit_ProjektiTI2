@model IEnumerable<AgjensioniUdhetimit_ProjektiTI2.Models.Staff>

@{
    ViewBag.Title = "Index";
}


<link rel="stylesheet" href="~/Content/assets/vendor/animate/animate.css">
<link rel="stylesheet" href="~/Content/assets/css/bootstrap.css">
<link rel="stylesheet" href="~/Content/assets/css/maicons.css">
<link rel="stylesheet" href="~/Content/assets/vendor/owl-carousel/css/owl.carousel.css">
<link rel="stylesheet" href="~/Content/assets/css/theme.css">
<script src="~/Content/assets/js/jquery-3.5.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="sweetalert2.all.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">


<p style="margin-top:3%">
    @Html.ActionLink("Add new Staff", "Create", null, new { @class = "nav-link text-secondary"})
</p>
<table class="table " id="clientTable" style="margin-top:2%">
    <thead class="thead-dark">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Birthdate</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StaffID }, new { @class = "btn btn-light" })
                @Html.ActionLink("Delete", "Delete", new { id = item.StaffID }, new { @class = "btn btn-light" })
            </td>
        </tr>
            }
        </tbody>
</table>



