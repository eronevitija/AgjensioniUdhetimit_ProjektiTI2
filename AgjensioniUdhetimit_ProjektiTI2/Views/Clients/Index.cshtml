@model IEnumerable<AgjensioniUdhetimit_ProjektiTI2.Models.Client>
@using AgjensioniUdhetimit_ProjektiTI2.Resources;

@{
    ViewBag.Title = AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Clients;
}

<link rel="stylesheet" href="~/Content/assets/vendor/animate/animate.css">
<link rel="stylesheet" href="~/Content/assets/css/bootstrap.css">
<link rel="stylesheet" href="~/Content/assets/css/maicons.css">
<link rel="stylesheet" href="~/Content/assets/vendor/owl-carousel/css/owl.carousel.css">
<link rel="stylesheet" href="~/Content/assets/css/theme.css">
<script src="~/Content/assets/js/jquery-3.5.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="sweetalert2.all.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">

<p style="margin-top:3%">
    @Html.ActionLink(AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Add_new_Client, "Create", null, new { @class = "nav-link text-dark" })
</p>
<!--Search by data-->
<div class="container">
    <b>Search By: </b>
    <select id="selectOption" class="p-1">
        <option value="firstName">FirstName</option>
        <option value="lastName">LastName</option>
        <option value="address">Address</option>
        <option value="phoneNumber">PhoneNumber</option>
        <option value="email">Email</option>
    </select>
    @Html.TextBox("Search") <input type="submit" id="searchBtn" value="Search" /> <br /><br />
</div>

<table id="clientTable" class="table " style="margin-top:2%">
    <thead class="thead-light">
        <tr>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.FirstName</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.LastName</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Address</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.PhoneNumber</th>
            <th>@AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="data">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink(AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Edit, "Edit", new { id = item.ClientID }, new { @class = "btn btn-light" })
                    @Html.ActionLink(AgjensioniUdhetimit_ProjektiTI2.Resources.Content.Delete, "Delete", new { id = item.ClientID }, new { @class = "btn btn-light" })
                </td>
            </tr>
        }
    </tbody>
</table>

