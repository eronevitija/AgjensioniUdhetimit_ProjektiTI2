@model IEnumerable<AgjensioniUdhetimit_ProjektiTI2.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/Content/assets/vendor/animate/animate.css">
<link rel="stylesheet" href="~/Content/assets/css/bootstrap.css">
<link rel="stylesheet" href="~/Content/assets/css/maicons.css">
<link rel="stylesheet" href="~/Content/assets/vendor/owl-carousel/css/owl.carousel.css">
<link rel="stylesheet" href="~/Content/assets/css/theme.css">
<script src="~/Content/assets/js/jquery-3.5.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="sweetalert2.all.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">


<p style="margin-top:5%">
    @Html.ActionLink("Add New Ticket", "Create", null, new {@class = "nav-link" })
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>DateCreated</th>
            <th>Deadline</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
         {
            <tr>
              <td>
            @Html.DisplayFor(modelItem => item.FirstName)
              </td>
               <td>
            @Html.DisplayFor(modelItem => item.LastName)
               </td>
                <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                 <td>
            @Html.DisplayFor(modelItem => item.Deadline)
                 </td>

                 <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TicketID }, new { @class = "btn btn-light" })
            @Html.ActionLink("Delete", "Delete", new { id = item.TicketID }, new { @class = "btn btn-light" })
                 </td>
                </tr>
         }
        </tbody>
</table>

